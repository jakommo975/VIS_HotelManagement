    </header>
    <div class="content">
        @RenderBody()
        <!--
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
        -->

        <!-- Error modal-->
        @if (@ViewBag.Message != null)
        {
            <div id="errorOverlay" class="message-overlay">
                <div class="message-container border-rounded block-shadow p-3">
                    <p class="text-center">@ViewBag.Message</p>
                    @if (ViewBag.Redirect != null)
                    {
                        <a class="btn btn-primary" href="@ViewBag.RedirectUrl">OK</a>
                    }
                    else
                    {
                        <button onclick="$('#errorOverlay').css('display', 'none')" class="btn btn-primary">OK</button>
                    }
                </div>
            </div>
        }

    </div>

