<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VIS_HotelManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/myStyle.css" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo.png" class="logo" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item mr-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "active" : "")">
                                <a class="nav-link" asp-controller="User" asp-action="MyAccount">My Account</a>
                            </li>
                            <li class="nav-item mr-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Register" ? "active" : "")">
                                <form action="/User/Logout" method="post">
                                    <button class="logoutButton nav-link" type="submit">Log Out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mr-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "active" : "")">
                                <a class="nav-link" asp-controller="User" asp-action="Login">Log In</a>
                            </li>
                            <li class="nav-item mr-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Register" ? "active" : "")">
                                <a class="nav-link" asp-controller="User" asp-action="Register">Register</a>
                            </li>
                        }
                        <li class="nav-item mr-3">
                            <a class="nav-link" href="">Help</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
